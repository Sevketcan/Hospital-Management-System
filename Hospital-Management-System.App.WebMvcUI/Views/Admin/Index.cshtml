@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e9ecef;
            color: #333;
            transition: opacity 0.5s ease;
        }

        .fade-out {
            opacity: 0;
        }

        .admin-panel-container {
            margin: 50px auto;
            width: 300px;
            text-align: center;
        }

            .admin-panel-container h2 {
                margin-bottom: 30px;
            }

            .admin-panel-container .btn {
                display: block;
                width: 100%;
                margin-bottom: 10px;
                border-radius: 10px;
                transition: background-color 0.3s, color 0.3s;
            }

            .admin-panel-container .btn-primary:hover {
                background-color: #0056b3;
                color: white;
            }

            .admin-panel-container .btn-success:hover {
                background-color: #218838;
                color: white;
            }

            .admin-panel-container .btn-info:hover {
                background-color: #138496;
                color: white;
            }

            .admin-panel-container .btn-secondary:hover {
                background-color: #5a6268;
                color: white;
            }

            .admin-panel-container .btn-dark:hover {
                background-color: #1d2124;
                color: white;
            }
    </style>
</head>
<body>
    <div class="admin-panel-container">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <h2>Admin Panel</h2>

        <a asp-controller="Hospital" asp-action="Index" class="btn btn-primary">Hospital Index</a>
        <a asp-controller="Doctor" asp-action="Index" class="btn btn-success">Doctor Index</a>
        <a asp-controller="Patient" asp-action="Index" class="btn btn-info">Patient Index</a>
        <a asp-controller="Prescription" asp-action="Index" class="btn btn-secondary">Prescription Index</a>
        <a asp-controller="Appointment" asp-action="Index" class="btn btn-dark">Appointment Index</a>
    </div>
    <!-- footer -->
    <footer>
        <div class="w3ls-footer-grids pt-sm-4 pt-3">
            <div class="container py-xl-5 py-lg-3">
                <div class="row">
                    <div class="col-md-4 w3l-footer">
                        <h2 class="mb-sm-3 mb-2">
                            <a href="index.html" class="text-white font-italic font-weight-bold">
                                <span>M</span>edic
                                <i class="fas fa-syringe ml-2"></i>
                            </a>
                        </h2>
                        <p>
                            Our hospital's contact details are provided on the side. Please do not hesitate to reach out if you have any questions. We are here to offer you the best service with our expert team.
                        </p>
                    </div>
                    <div class="col-md-4 w3l-footer my-md-0 my-4">
                        <h3 class="mb-sm-3 mb-2 text-white">Address</h3>
                        <ul class="list-unstyled">
                            <li>
                                <i class="fas fa-location-arrow float-left"></i>
                                <p class="ml-4">
                                    Barbaros Bulvarı Yıldız İş Hanı
                                    <span>Beşiktaş / İstanbul.</span>
                                </p>
                                <div class="clearfix"></div>
                            </li>
                            <li class="my-3">
                                <i class="fas fa-phone float-left"></i>
                                <p class="ml-4">1234567890</p>
                                <div class="clearfix"></div>
                            </li>
                            <li>
                                <i class="far fa-envelope-open float-left"></i>
                                <a href="mailto:info@example.com" class="ml-3">mail@example.com</a>
                                <div class="clearfix"></div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-4 w3l-footer">
                        <h3 class="mb-sm-3 mb-2 text-white">Quick Links</h3>
                        <div class="nav-w3-l">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="/Home/index">Home</a>
                                </li>
                                <li class="mt-2">
                                    <a href="/Home/About">About Us</a>
                                </li>
                                <li class="mt-2">
                                    <a href="/Home/Gallery">Gallery</a>
                                </li>
                                <li class="mt-2">
                                    <a href="/AppointmentRequest/Appointment">Appointment</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="border-top mt-5 pt-lg-4 pt-3 pb-lg-0 pb-3 text-center">
                    <p class="copy-right-grids mt-lg-1">
                        &copy; 2024 - Hospital_Management_System.App.WebMvcUI
                        <a href="https://w3layouts.com/" target="_blank">W3layouts</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- //footer -->

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const links = document.querySelectorAll('a.btn');
            links.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    document.body.classList.add('fade-out');
                    setTimeout(() => {
                        window.location.href = link.href;
                    }, 500);
                });
            });
        });
    </script>
</body>
</html>
