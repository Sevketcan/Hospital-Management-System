@using Hospital_Management_System.Entity.Entities
@model IEnumerable<Prescription>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: #e9ecef;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
        }

            .table th, .table td {
                padding: 0.5rem;
                vertical-align: middle;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: middle;
                border-bottom: 2px solid #dee2e6;
                background-color: #4575bd;
                color: white;
            }

            .table tbody tr:nth-of-type(even) {
                background-color: #f9f9f9;
            }

        .table-hover tbody tr:hover {
            background-color: #e9ecef;
            border-radius: 15px;
        }

        .nav-link {
            color: #fff;
            text-decoration: none;
            padding: 0.25rem 0.75rem;
            border-radius: 5px;
            margin-right: 5px;
        }

            .nav-link:hover {
                text-decoration: none;
                background-color: #fff; /* Hover durumunda arka plan rengini beyaz yapar */
                color: #000; /* Hover durumunda yazı rengini siyah yapar */
                margin-top: 3px;
            }

        .bg-primary {
            background-color: #4575bd !important;
            margin-top: 3px;
        }

            .bg-primary:hover {
                background-color: #fff !important; /* Hover durumunda arka plan rengini beyaz yapar */
                color: #000 !important; /* Hover durumunda yazı rengini siyah yapar */
                margin-top: 3px;
            }

        .text-white {
            color: #fff !important;
        }

        .rounded {
            border-radius: 5px;
        }

        .new-prescription-button {
            text-align: left;
            margin-top: 20px;
        }

            .new-prescription-button a {
                display: inline-block;
                padding: 0.5rem 1rem;
                font-size: 0.875rem;
            }

        .title {
            color: white;
            font-family: 'Arial', sans-serif;
            margin-bottom: 20px;
            text-align: center;
            background-color: #4575bd;
            padding: 0.25rem 0.5rem;
            border-radius: 5px;
            margin: 0 auto;
            font-size: 1.25rem;
        }
    </style>
</head>
<body>
<div class="container">
        <br />
        <br />
        <br />
        <br />
        <br />
        <h4 class="title">Prescriptions</h4>
        <br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrescriptionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor.Surname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrescriptionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.Surname)
                </td>
                <td>
                    @* <a class="nav-link bg-primary bg-primary-50 text-white d-inline-block rounded" asp-action="Details" asp-route-id="@item.Id">Details</a>  *@
                    <a class="nav-link bg-primary bg-primary-50 text-white d-inline-block rounded" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="nav-link bg-primary bg-primary-50 text-white d-inline-block rounded" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silmek İstiyor musunuz?')">Delete</a>
                </td>
            </tr>
        }
        <p>
            <a class="nav-link bg-primary bg-primary-50 text-white d-inline-block rounded" asp-action="Create">New Prescription</a>
        </p>
    </tbody>
</table>
      @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
