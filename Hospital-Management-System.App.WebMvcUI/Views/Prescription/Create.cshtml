@using Hospital_Management_System.Entity.Entities
@model Prescription

@{
    ViewData["Title"] = "Create";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e9ecef;
            color: #333;
        }

        h4 {
            color: white;
            font-family: 'Arial', sans-serif;
            margin-bottom: 20px;
            text-align: center;
            background-color: #4575bd;
            padding: 0.25rem 0.5rem;
            border-radius: 5px;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            margin: 20px auto;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 500px;
        }

        .form-group {
            margin-bottom: 1rem;
        }

            .form-group p {
                margin-bottom: 0.5rem;
                font-weight: bold;
                color: #555;
            }

        .form-control {
            width: 100%;
            padding: 0.5rem;
            font-size: 1rem;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .form-control:focus {
                border-color: #80bdff;
                outline: 0;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .btn {
            display: inline-block;
            font-weight: 400;
            color: #fff;
            text-align: center;
            vertical-align: middle;
            user-select: none;
            background-color: #4575bd;
            border: 1px solid #007bff;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .btn-primary:hover {
            color: #fff;
            background-color: #4575bd;
            border-color: #004085;
        }

        .btn-secondary {
            background-color: #4575bd;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #4575bd;
                border-color: #4575bd;
            }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
        }

        .back-link {
            display: inline-block;
            margin-top: 10px;
            color: #17a2b8;
            text-decoration: none;
        }

            .back-link:hover {
                color: #4575bd;
                text-decoration: underline;
            }

        .text-center {
            text-align: center;
        }

        .mt-3 {
            margin-top: 15px;
        }

        .mt-4 {
            margin-top: 20px;
        }

        .form-group label {
            font-size: 15px;
            letter-spacing: 1px;
            color: #000;
            margin-bottom: 8px;
            text-align: left;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <h4 class="text-center mb-4">Add Prescription</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label asp-for="MedicationName" class="control-label">İlaç Adı</label>
                        <input asp-for="MedicationName" class="form-control" />
                        <span asp-validation-for="MedicationName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrescriptionDate" class="control-label"></label>
                        <input asp-for="PrescriptionDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="PrescriptionDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Usage" class="control-label">Kullanım Talimatı</label>
                        <input asp-for="Usage" class="form-control" />
                        <span asp-validation-for="Usage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PatientId" class="control-label">Hasta ID</label>
                        <input asp-for="PatientId" class="form-control" />
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DoctorId" class="control-label">Doktor ID</label>
                        <input asp-for="DoctorId" class="form-control" />
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary mt-3">Create</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>
</body>
</html>
