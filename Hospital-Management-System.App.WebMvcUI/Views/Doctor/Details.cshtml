@model Hospital_Management_System.Entity.ViewModels.DoctorDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #e9ecef;
            font-family: 'Arial', sans-serif;
            transition: opacity 0.5s ease;
        }

        .fade-out {
            opacity: 0;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .btn-primary {
            color: #fff;
            background-color: #4575bd;
            border-color: #4575bd;
        }

        .card-header {
            background-color: #4575bd;
            color: white;
            font-weight: bold;
            border-bottom: none;
        }

        .card-body {
            padding: 20px;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

            .table th, .table td {
                padding: 0.75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
                background-color: #4575bd;
                color: white;
            }

            .table tbody tr:nth-of-type(even) {
                background-color: #f9f9f9;
            }

        .table-hover tbody tr:hover {
            background-color: #e9ecef;
        }

        .nav-link {
            color: #fff;
            text-decoration: none;
            padding: 0.25rem 0.75rem;
            border-radius: 5px;
        }

            .nav-link:hover {
                text-decoration: none;
            }

        .bg-primary {
            width:75px;
            margin: 3px;
            background-color: #4575bd !important;
        }

            .bg-primary:hover {
                background-color: #4575bd !important;
            }

        .text-white {
            color: #fff !important;
        }

        .rounded {
            border-radius: 5px;
        }

        .dl-horizontal dt {
            float: left;
            width: 120px;
            font-weight: bold;
        }

        .dl-horizontal dd {
            margin-left: 140px;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4>Doctor Details</h4>
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.Doctors.Id)</dt>
                    <dd>@Html.DisplayFor(model => model.Doctors.Id)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Doctors.Name)</dt>
                    <dd>@Html.DisplayFor(model => model.Doctors.Name)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Doctors.Surname)</dt>
                    <dd>@Html.DisplayFor(model => model.Doctors.Surname)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Doctors.BranchName)</dt>
                    <dd>@Html.DisplayFor(model => model.Doctors.BranchName)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Doctors.PhoneNumber)</dt>
                    <dd>@Html.DisplayFor(model => model.Doctors.PhoneNumber)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Doctors.Username)</dt>
                    <dd>@Html.DisplayFor(model => model.Doctors.Username)</dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Appointment List</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Appointments.First().Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Appointments.First().DateTime)</th>
                            <th>Patient @Html.DisplayNameFor(model => model.Appointments.First().Patient.Name)</th>
                            <th>Patient @Html.DisplayNameFor(model => model.Appointments.First().Patient.Surname)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model.Appointments)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => appointment.Id)</td>
                                <td>@Html.DisplayFor(modelItem => appointment.DateTime)</td>
                                <td>@Html.DisplayFor(modelItem => appointment.Patient.Name)</td>
                                <td>@Html.DisplayFor(modelItem => appointment.Patient.Surname)</td>
                                <td>
                                    <a class="nav-link bg-primary rounded" asp-action="Edit" asp-controller="Appointment" asp-route-id="@appointment.Id">Edit</a>
                                    <a class="nav-link bg-primary rounded" asp-action="Delete" asp-controller="Appointment" asp-route-id="@appointment.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Prescription List</h4>
            </div>
            <div class="card-body">
                <p>
                    <a class="nav-link bg-primary bg-primary-50 text-white d-inline-block rounded" asp-controller="Prescription" asp-action="Create">Add New Prescription</a>
                </p>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Prescriptions.First().Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Prescriptions.First().MedicationName)</th>
                            <th>@Html.DisplayNameFor(model => model.Prescriptions.First().PrescriptionDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Prescriptions.First().Usage)</th>
                            <th>Patient @Html.DisplayNameFor(model => model.Prescriptions.First().Patient.Name)</th>
                            <th>Patient @Html.DisplayNameFor(model => model.Prescriptions.First().Patient.Surname)</th>
                            <th>@Html.DisplayNameFor(model => model.Prescriptions.First().DoctorId)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prescription in Model.Prescriptions)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => prescription.Id)</td>
                                <td>@Html.DisplayFor(modelItem => prescription.MedicationName)</td>
                                <td>@Html.DisplayFor(modelItem => prescription.PrescriptionDate)</td>
                                <td>@Html.DisplayFor(modelItem => prescription.Usage)</td>
                                <td>@Html.DisplayFor(modelItem => prescription.Patient.Name)</td>
                                <td>@Html.DisplayFor(modelItem => prescription.Patient.Surname)</td>
                                <td>@Html.DisplayFor(modelItem => prescription.DoctorId)</td>
                                <td>
                                    <a class="nav-link bg-primary rounded" asp-action="Edit" asp-controller="Prescription" asp-route-id="@prescription.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>

        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const links = document.querySelectorAll('a.back-link, .btn.btn-primary');
            links.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    document.body.classList.add('fade-out');
                    setTimeout(() => {
                        window.location.href = link.href;
                    }, 500);
                });
            });
        });
    </script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('.btn-delete').click(function () {
                    var appointmentId = $(this).data('id');
                    if (confirm("Silmek istediğinize emin misiniz?")) {
                        $.ajax({
                            url: '@Url.Action("DeleteAppointment", "Appointment")',
                            type: 'POST',
                            data: { id: appointmentId },
                            success: function () {
                                location.reload();
                            },
                            error: function (xhr, status, error) {
                                alert("Bir hata oluştu: " + error);
                            }
                        });
                    }
                });
            });
        </script>
    }
</body>
</html>
